{
  "name": "gkd-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "format": "prettier --cache --write --ignore-unknown .",
    "dev": "pnpm build:api && pnpm -F @gkd-kit/docs docs:dev",
    "build:api": "pnpm -F @gkd-kit/api predocs:build",
    "build": "pnpm build:api && pnpm -F @gkd-kit/docs docs:build",
    "preview": "pnpm -F @gkd-kit/docs docs:preview"
  },
  "dependencies": {
    "@gkd-kit/selector": "0.3.3",
    "@types/file-saver": "2.0.7",
    "@types/jsdom": "21.1.7",
    "@types/node": "20.14.10",
    "acorn-walk": "8.3.3",
    "cross-env": "7.0.3",
    "file-saver": "2.0.5",
    "jsdom": "24.1.0",
    "magic-string": "0.30.10",
    "markdown-it-mathjax3": "4.3.2",
    "naive-ui": "2.38.2",
    "prettier": "3.3.3",
    "tsx": "4.16.2",
    "typedoc": "0.26.4",
    "typedoc-plugin-markdown": "4.2.1",
    "typedoc-vitepress-theme": "1.0.1",
    "typescript": "5.5.3",
    "unocss": "0.61.3",
    "vitepress": "1.3.0"
  },
  "volta": {
    "node": "20.15.1"
  },
  "packageManager": "pnpm@9.4.0",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "search-insights",
        "vite"
      ]
    }
  }
}
